from flask import Flask
from flask_sqlalchemy import SQLAlchemy
from flask_migrate import Migrate

db = SQLAlchemy()
migrate = Migrate()

def create_app() -> Flask:
    app = Flask(__name__)
    app.config.from_object('config.Config')
    
    db.init_app(app)
    migrate.init_app(app, db)
    
    from .routes.users import main as users_blueprint
    from .routes.private import main as private_blueprint
    from .routes.public import main as public_blueprint
    
    app.register_blueprint(users_blueprint, url_prefix='/api')
    app.register_blueprint(private_blueprint, url_prefix='/private')
    app.register_blueprint(public_blueprint, url_prefix='/public')
    
    return app