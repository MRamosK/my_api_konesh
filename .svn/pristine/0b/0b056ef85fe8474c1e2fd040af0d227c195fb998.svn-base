from . import main
from flask import Blueprint, request, jsonify
from app.services.cfdi_status_service import CFDIStatusService
from app.repositories.cfdi_repository import CFDIRepository

main = Blueprint('cfd_recepcion', __name__)

# API Route
@main.route('/cfdi/status', methods=['GET'])
def get_cfdi_status():
    """
    API endpoint to get CFDI status.

    Returns:
        str: JSON response containing the CFDI status.
    """
    minutes_status = int(request.args.get('minutes_status', 10))
    minutes_extemporaneos = int(request.args.get('minutes_extemporaneos', 10))
    minutes_incidents = int(request.args.get('minutes_incidents', 10))
    minutes_cr = int(request.args.get('minutes_cr', 10))
    minutes_cr_cancellation = int(request.args.get('minutes_cr_cancellation', 10))

    service = CFDIStatusService(CFDIRepository())
    response = service.get_cfd_status(minutes_status, minutes_extemporaneos, minutes_incidents,
                                      minutes_cr, minutes_cr_cancellation)
    return jsonify(response)






